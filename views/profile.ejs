<link rel="stylesheet" href="/css/user_profile.css">

<div id="display">
    <img src="/images/user_profile.png" alt="User Profile Picture" width="200px" height="200px">
</div>

<div class="container">

    <form method="POST">
        <div id="buttons-menu" align="right">
            <button type="button" class="btn btn-info" id="edit">Edit Info.</button>
            <button type="submit" class="btn btn-success" id="save">Save Info.</button>
        </div>
        <br><br>
        <div>
            <label for="first_name">First Name:</label>
            <input id="first_name" name="FirstName" type="text" placeholder="Enter...">
        </div>
        <div>
            <label for="last_name">Last Name:</label>
            <input id="last_name" name="LastName" type="text" placeholder="Enter...">
        </div>
        <div>
            <label for="phone">Contact Number:</label>
            <input id="phone" name="Phone" type="text" placeholder="Enter...">
        </div>
        <div>
            <label for="email">Email :</label>
            <input id="email" name="Email" type="email" placeholder="Enter...">
        </div>
        <div>
            <label for="emp_id">Employee ID:</label>
            <input id="emp_id" name="EmployeeID" type="text" placeholder="Enter...">
        </div>
    </form>
</div>